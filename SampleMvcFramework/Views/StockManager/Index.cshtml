@model List<SampleMvcFramework.Models.Stock>
@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Add new stock", "AddNewStock", new {}, new { @class = "btn btn-info" })
<hr />
<div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Stock Id</th>
                <th>Stock Name</th>
                <th>Stock Description</th>
                <th>Unit Price</th>
                <th colspan="2">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stock in Model)
            {
                <tr>
                    <td>@stock.Id</td>
                    <td>@stock.Name</td>
                    <td>@stock.Description</td>
                    <td>@stock.UnitPrice</td>
                    <td>@Html.ActionLink("Edit", "OnEdit", new { id = stock.Id }, new { @class = "btn btn-primary"})</td>
                    <td>@Html.ActionLink("Delete", "OnDelete", new { id = stock.Id }, new { @class = "btn btn-danger"})</td>
                </tr>
            }
        </tbody>
    </table>
</div>

