@model SampleMvcFramework.Models.Stock

@{
    ViewBag.Title = "OnEdit";
}

<h2>Edit Stock</h2>
@using (Html.BeginForm())
{
    <div>
        <p>
            @Html.LabelFor(m => m.Id)
            @Html.DisplayFor(m => m.Id)
        </p>
        <p>
            @Html.LabelFor(m => m.Name)
            @Html.EditorFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.Description)
            @Html.EditorFor(m => m.Description)
        </p>
        <p>
            @Html.LabelFor(m => m.UnitPrice)
            @Html.EditorFor(m => m.UnitPrice)
        </p>
        <button class="btn btn-info" type="submit">Update stock</button>
        @Html.ActionLink("Go Back", "Index", new { }, new { @class = "btn btn-warning" })
    </div>
}
