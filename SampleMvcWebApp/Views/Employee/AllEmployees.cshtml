@model List<SampleMvcWebApp.Models.Employee>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AllEmployees</title>
</head>
<body>
    <nav>
        <a asp-controller="Employee" asp-action="AddNew">Create New Employee</a>
    </nav>
    <h1>List of Employees</h1>
    <hr />
    <div>
        <table border="1">
            <tr>
                <th>Employee Id</th>
                <th>Employee Name</th>
                <th>Employee Address</th>
                <th>Employee Salary</th>
                <th>Images</th>
            </tr>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Name</td>
                    <td>@emp.Address</td>
                    <td>@emp.Salary</td>
                    <td>
                        <img src="@emp.Image" style="width:100px; height:150px" />
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@emp.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.Id">X</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
